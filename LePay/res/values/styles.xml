<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AccountVerifyEditeTextStyle" >
        <item name="android:textColorHint">@color/account_verify_text_hint_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="AccountVerifyEditeViewStyle" parent="AccountVerifyEditeTextStyle">
        <item name="android:background">#FFFFFF</item>
        <item name="android:paddingLeft">@dimen/account_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/account_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/account_padding_default</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="AccountVerifyTextStyle" >
        <item name="android:textColor">#447DE9</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AccountDividerLine" >
        <item name="android:background">#EEEEF0</item>
        <item name="android:layout_height">6dp</item>
    </style>

    <style name="AccountHorizontalLine" >
        <item name="android:background">#D9D9D9</item>
        <item name="android:layout_marginLeft">@dimen/account_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/account_horizontal_margin</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="AccountVerticalLine" >
        <item name="android:background">#D9D9D9</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_width">1px</item>
    </style>

    <style name="SettingListItemTextStyle">
        <item name="android:textColor">#262626</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="SettingListItemFlagTextStyle">
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SettingListItemStyle" parent="SettingListItemTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_item_height</item>
        <item name="android:layout_marginLeft">@dimen/margin_default</item>
        <item name="android:layout_marginRight">@dimen/margin_default</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="SettingListDividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_divider_height</item>
        <item name="android:background">@color/divider_secondary_horizontal_color</item>
    </style>

    <style name="LargeButton" parent="@style/Widget.Eui.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LargeButton.SectionBase">
        <item name="android:layout_marginLeft">@dimen/account_padding_default</item>
        <item name="android:layout_marginRight">@dimen/account_padding_default</item>
    </style>

    <style name="PhoneEditText">
        <item name="android:layout_marginLeft">@dimen/padding_default</item>
        <item name="android:layout_marginRight">@dimen/padding_default</item>
    </style>

    <style name="ErrorTextStyle">
        <item name="android:textColor">@color/account_edit_error_color</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.LePay" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/channel_list_tv_primary_color</item>
    </style>

    <style name="TextAppearance.LePay.ChannelListItemLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/channel_list_tv_primary_color</item>
    </style>

    <style name="TextAppearance.LePay.ChannelListItemContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/channel_list_tv_secondary_color</item>
    </style>

</resources>