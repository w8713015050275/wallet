<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    <android.support.v7.widget.CardView
            android:id="@+id/cv_weibo_photo_box"
            android:layout_width="48dp"
            android:layout_height="48dp"
            card_view:cardCornerRadius="24dp"
            card_view:cardElevation="@dimen/item_card_view_elevation"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/item_marge_normal">

        <ImageView
                android:id="@+id/iv_weibo_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/item_recommend_photo_bg"
                />

    </android.support.v7.widget.CardView>

    <TextView
            android:id="@+id/tv_weibo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cv_weibo_photo_box"
            android:layout_marginStart="@dimen/item_marge_normal"
            android:layout_centerVertical="true"
            android:textSize="@dimen/font_big"
            android:textColor="@color/shallow_black"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/item_marge_normal"
            android:src="@drawable/recommend_more"/>

    <!--<View-->
            <!--android:id="@+id/blank"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1px"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:background="@color/item_recommend_view_style_front_color1"/>-->

</RelativeLayout>