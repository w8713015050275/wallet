<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/item_marge_normal"
        >

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <RelativeLayout
                android:id="@+id/ll_music_top"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_marge_tiny"
                >

            <RelativeLayout
                    android:id="@+id/rl_music_box_top"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/item_recommend_music_content_w"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@color/transparent"
                    >

                <TextView
                        android:id="@+id/tv_music_name_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_normal"
                        android:textColor="@color/shallow_black"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginTop="6dp"
                        android:drawableEnd="@drawable/recommend_music_arrow"
                        android:paddingStart="5dp"
                        />

                <TextView
                        android:id="@+id/tv_music_album_top"
                        android:layout_below="@id/tv_music_name_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:textSize="@dimen/font_small"
                        android:textColor="@color/grey"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:paddingStart="5dp"
                        />
            </RelativeLayout>

            <TextView
                    android:id="@+id/tv_music_index_top"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="4dp"
                    android:gravity="left|top"
                    style="@style/LeTextStyleThin"
                    />

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/ll_music_center"
                android:layout_marginTop="@dimen/item_recomend_margin_size"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_marge_tiny"
                >

            <RelativeLayout
                    android:id="@+id/rl_music_box_center"
                    android:layout_marginStart="@dimen/item_recomend_margin_size"
                    android:layout_width="@dimen/item_recommend_music_content_w"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@color/transparent"
                    android:layout_alignParentRight="true"
                    >

                <TextView
                        android:id="@+id/tv_music_name_center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_normal"
                        android:layout_marginEnd="@dimen/item_recomend_front_margin_size"
                        android:textColor="@color/shallow_black"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginTop="6dp"
                        android:drawableEnd="@drawable/recommend_music_arrow"
                        android:paddingStart="5dp"
                        />

                <TextView
                        android:id="@+id/tv_music_album_center"
                        android:layout_below="@id/tv_music_name_center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:textSize="@dimen/font_small"
                        android:textColor="@color/grey"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:paddingStart="5dp"
                        />
            </RelativeLayout>

            <TextView
                    android:id="@+id/tv_music_index_center"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="4dp"
                    android:gravity="left|top"
                    style="@style/LeTextStyleThin"
                    />

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/ll_music_bottom"
                android:layout_marginTop="@dimen/item_recomend_margin_size"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_marge_tiny"
                >

            <RelativeLayout
                    android:id="@+id/rl_music_box_bottom"
                    android:layout_marginStart="@dimen/item_recomend_margin_size"
                    android:layout_width="@dimen/item_recommend_music_content_w"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@color/transparent"
                    android:layout_alignParentRight="true"
                    >

                <TextView
                        android:id="@+id/tv_music_name_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_normal"
                        android:layout_marginEnd="@dimen/item_recomend_front_margin_size"
                        android:textColor="@color/shallow_black"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginTop="6dp"
                        android:drawableEnd="@drawable/recommend_music_arrow"
                        android:paddingStart="5dp"
                        />

                <TextView
                        android:id="@+id/tv_music_album_bottom"
                        android:layout_below="@id/tv_music_name_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:textSize="@dimen/font_small"
                        android:textColor="@color/grey"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:paddingStart="5dp"
                        />
            </RelativeLayout>

            <TextView
                    android:id="@+id/tv_music_index_bottom"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="4dp"
                    android:gravity="left|top"
                    style="@style/LeTextStyleThin"
                    />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>