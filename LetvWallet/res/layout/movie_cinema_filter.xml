<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_cinema_filter_height"
        android:orientation="horizontal"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/cinema_category"
            android:layout_width="150dip"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:background="@color/movie_cinema_filter_category_bg_color"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/cinema_category_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/movie_cinema_filter_container_color"
            />
    </LinearLayout>
    <View
        android:id="@+id/half_transparent_view"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        />
</LinearLayout>