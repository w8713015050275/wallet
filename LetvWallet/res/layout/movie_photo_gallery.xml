<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/photo_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        />
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/toolbar_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="16dip"
            android:paddingRight="16dip"
            android:src="@drawable/ic_wallet_action_back"
            android:alpha="@dimen/le_img_alpha"
            />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/toolbar_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/movie_secondary_tv_color"
            android:gravity="center"
            android:textSize="16sp"
            />
    </RelativeLayout>

</FrameLayout>