<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/top_line"
        style="@style/Divider_HorizontalLine_Style"
        android:visibility="gone"></View>

    <RelativeLayout
        style="@style/SectionBase.CostContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_label_cost"
            style="@style/TextAppearance.Wallet.OrderDesc.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/label_order_payment" />

        <LinearLayout
            android:id="@+id/ll_cost_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cost"
                style="@style/TextAppearance.Wallet.OrderDesc.Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_cost_unit"
                style="@style/TextAppearance.Wallet.OrderDesc.Unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_price_unit" />

            <ImageView
                android:id="@+id/iv_jump"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/mobile_order_desc_arrows"
                android:clickable="true"
                android:alpha="@dimen/le_img_alpha"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/bottom_line"
        style="@style/Divider_HorizontalLine_Style"
        android:visibility="gone"></View>

</LinearLayout>