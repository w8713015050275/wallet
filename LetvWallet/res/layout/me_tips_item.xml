<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FFFAD1"
    android:gravity="center_vertical"
    android:minHeight="40dp"
    android:paddingLeft="@dimen/me_top_info_horizontal_padding"
    android:paddingRight="@dimen/me_top_info_horizontal_padding">

    <TextView
        android:id="@+id/tvTipTitle"
        style="@style/MeTipsTextStyle"
        android:layout_width="0dp"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_weight="1.0"/>

    <TextView
        android:id="@+id/tvTipDesc"
        style="@style/MeTipsTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:maxLines="1"
        android:layout_marginLeft="10dp"
        android:drawableRight="@drawable/me_tips_right_arrow"
        android:gravity="center_vertical"
        android:scaleType="fitXY" />
</LinearLayout>