<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:leui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/pay_desc_vdefault_padding"
    android:background="@color/content_item_bg_color"
    android:orientation="vertical">

    <View style="@style/Divider_HorizontalLine_Style" />

    <RadioGroup
        android:id="@+id/pay_by_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:layout_weight="1">

        <com.letv.shared.widget.LeRadioButton
            android:id="@+id/rbtn_ali_mobile"
            style="@style/SectionBase.PayOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/zhifubao"
            android:drawablePadding="12dip"
            android:text="@string/pay_by_option_ali"
            android:textColor="@color/movie_primary_tv_color"
            leui:leBoxIsTextOnRight="false"
            leui:leBoxWithoutBorder="true" />


        <com.letv.shared.widget.LeRadioButton
            android:id="@+id/rbtn_wechat_mobile"
            style="@style/SectionBase.PayOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/weixin"
            android:drawablePadding="12dip"
            android:text="@string/pay_by_option_wechat"
            android:textColor="@color/movie_primary_tv_color"
            android:visibility="visible"
            leui:leBoxIsTextOnRight="false"
            leui:leBoxWithoutBorder="true" />
    </RadioGroup>

    <View style="@style/Divider_HorizontalLine_Style" />


</LinearLayout>