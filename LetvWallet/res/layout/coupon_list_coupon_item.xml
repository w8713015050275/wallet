<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dip"
    android:minHeight="@dimen/view_coupon_item_height"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/view_coupon_padding_top"
        android:layout_marginLeft="@dimen/view_coupon_padding_left"
        android:layout_marginBottom="@dimen/view_coupon_padding_bottom">
        <TextView
            android:id="@+id/tv_coupon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tvCouponCatalogTextColor"
            android:textSize="@dimen/tv_coupon_name_textsize"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/tv_coupon_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tvCouponContentTvColor"
            android:textSize="@dimen/tv_coupon_type_textsize"
            android:layout_marginTop="@dimen/tv_coupon_type_margin_top"/>
        <TextView
            android:id="@+id/tv_coupon_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tvCouponContentTvColor"
            android:textSize="@dimen/tv_coupon_date_textsize"
            android:layout_marginTop="@dimen/tv_coupon_date_margin_top"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/view_coupon_icon_margin"
        android:layout_marginRight="@dimen/view_coupon_icon_margin_right"
        android:layout_marginBottom="@dimen/view_coupon_padding_bottom">
        <ImageView
            android:layout_marginTop="@dimen/view_coupon_icon_margin_top"
            android:id="@+id/img_coupon_icon"
            android:layout_width="@dimen/view_coupon_icon_width"
            android:layout_height="@dimen/view_coupon_icon_width"
            android:alpha="@dimen/le_img_alpha"
            android:layout_gravity="top|center_horizontal"/>
        <TextView
            android:id="@+id/tv_coupon_expired"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="1.0"
            android:textColor="@color/tvCouponContentTvColor"
            android:textSize="@dimen/tv_coupon_date_textsize"
            android:visibility="gone"
            android:gravity="center_horizontal|bottom"
            android:layout_gravity="bottom|center_horizontal"/>
    </LinearLayout>


</LinearLayout>
