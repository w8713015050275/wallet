<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Wallet.TextAppearance" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:fontFamily">helve-neue</item>
    </style>
    <style name="Wallet.TextAppearance.Inverse" parent="@android:style/TextAppearance.DeviceDefault.Inverse">
        <item name="android:fontFamily">helve-neue</item>
    </style>
    <style name="Wallet.TextAppearance.Large" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">helve-neue</item>
    </style>
    <style name="Wallet.TextAppearance.Medium" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:fontFamily">helve-neue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="Wallet.TextAppearance.Small" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:fontFamily">helve-neue</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>
    <style name="Wallet.TextAppearance.Large.Inverse" parent="@android:style/TextAppearance.DeviceDefault.Large.Inverse">
        <item name="android:fontFamily">helve-neue</item>
    </style>
    <style name="Wallet.TextAppearance.Medium.Inverse" parent="@android:style/TextAppearance.DeviceDefault.Medium.Inverse">
        <item name="android:fontFamily">helve-neue</item>
    </style>
    <style name="Wallet.TextAppearance.Small.Inverse" parent="@android:style/TextAppearance.DeviceDefault.Small.Inverse">
        <item name="android:fontFamily">helve-neue</item>
    </style>
    <style name="Wallet.TextAppearance.Widget.Button" parent="@android:style/TextAppearance.DeviceDefault.Widget.Button">
        <item name="android:fontFamily">helve-neue</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="Wallet.TextAppearance.Widget.PopupMenu.Large" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Large">
        <item name="android:fontFamily">helve-neue</item>
    </style>
    <style name="Wallet.TextAppearance.Widget.PopupMenu.Small" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Small">
        <item name="android:fontFamily">helve-neue</item>
    </style>

    <style name="Wallet.Actionbar" parent="@style/ThemeOverlay.Eui.ActionBar">
        <item name="titleTextColor">@color/wallet_actionBar_titleTv_color</item>
        <item name="titleTextAppearance">@style/Wallet.Toolbar.Title</item>
    </style>

    <style name="Wallet.Actionbar.Arrow">
        <item name="navigationIcon">@drawable/ic_wallet_action_back</item>
    </style>

    <style name="Wallet.Toolbar.Title" parent="@*android:style/TextAppearance">
        <item name="android:background">@color/wallet_toolbar_titleBg_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/wallet_toolbar_titleTv_color</item>
    </style>

    <style name="BoldText" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Divider_HorizontalLine_Style">
        <item name="android:background">@color/divider_horizontal_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_width</item>
    </style>

    <style name="Divider_Vertical_Style">
        <item name="android:background">@color/divider_vertical_color</item>
        <item name="android:layout_width">@dimen/divider_vertical_width</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Label_View">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="Blankpage_NoLogin" >
        <item name="android:icon">@drawable/le_ic_prompt_no_login_or_contacts</item>
        <item name="android:description">@string/empty_no_login</item>
        <item name="primaryText">@string/empty_no_login_prompt</item>
    </style>

</resources>